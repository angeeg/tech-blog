<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{post_url}})</span>
      </div>
      <div class="meta">
        Written by {{post.user.username}} on
        {{post.created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
        <span>({{post.post_url}})</span>
      </div>
    </article>
  </li>
  {{/each}}
</ol>